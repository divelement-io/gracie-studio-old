import React from 'react'
import { MdExtension } from 'react-icons/md'
import SectionIcon from '../../components/SectionIcon'

export default {
	title: '{{constantCase componentName}}',
	name: '{{camelCase componentName}}',
	type: 'object',
  groups: [
    { name: 'settings', title: 'Settings' }
  ],
	fields: [
		{
      name: 'internalName',
      title: 'Internal Name',
      type: 'string',
      validation: Rule => Rule.required()
    },
    {
      name: 'theme',
      title: 'Theme',
      type: 'theme',
      group: 'settings'
    },
    // More Fields
    {
      name: 'hidden',
      title: 'Hidden',
      initialValue: false,
      type: 'boolean',
    },
	],
	preview: {
    select: {
      title: 'internalName',
      media: 'media',
      hidden: 'hidden',
      theme: 'theme'
    },
    prepare (selection) {
      const { subtitle, media, hidden, theme } = selection
      return Object.assign({}, selection, {
        subtitle: hidden ? 'Hidden' : subtitle || '{{constantCase componentName}}',
        media: media || <SectionIcon hidden={hidden} theme={theme}><MdExtension size='24px'/></SectionIcon>
      })
    }
  }
}